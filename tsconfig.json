{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "lib": [
      "es2015",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
